{% block content %}
    <h1>Discover And Battle</h1>
    <hr>

        {% for user in users %}
        <div class="carders" style="width: 18rem;">
            
            <div class="card-body">
                <h5 class="card-title">{{user.first_name}} {{user.last_name}}</h5>
            </div>
            <ul class="list-group list-group-flush">
                {% if current_user.is_following(user) %}
                <li class="list-group-item"><a href ="{{url_for('social.unfollow', id=user.id)}}" class="btn btn-warning">Unfollow</a></li>
                <li class="list-group-item"><a href ="{{url_for('main.show_other_users_team', id=user.id)}}" class="btn btn-primary">See Their Pokemon</a></li>
                <li class="list-group-item"><a href ="{{url_for('main.battle', id=user.id)}}" class="btn btn-danger">Attack</a></li>
                <li class="list-group-item">{{user.get_battle_record()}}</li>
                {% else %}
                <li class="list-group-item"><a href ="{{url_for('social.follow', id=user.id)}}" class="btn btn-success">Follow</a> </li>
                {% endif %}
            </ul>           
        </div>            
    {% endfor%}

    
{% endblock %}