{% block title%}
    Gotta Catch 'Em All
{% endblock %}


{% block content %}
<div class="container text-center">
  <div class="row">
    <div class="col">      
    </div>
    <div class="col">
     <h1>Gotta Catch 'Em All</h1>
<form action="{{url_for('main.poke_finder')}}" method='POST'>
{{form.hidden_tag()}}
    <div class="mb-3">
        {{form.pokemon_name.label(class="form-label")}}
        {{form.pokemon_name(class="form-control")}}
        {% for error in form.pokemon_name.errors%}
            <small style="color:red">{{error}}</small>
        {% endfor %}
    </div>
    <div>
        {{form.submit(class="btn btn-success")}}<br>
         <small style="color:red">{{error}}</small>
    </div>
</form> 
    </div>
    <div class="col">      
    </div>
  </div>
</div>


{% if poke %}

    <div class="cards">
        <div class="left">
            <h1>{{name}}</h1>
            <img src={{poke.Sprite}}>
            {% if space_in_team %}
                <a href="{{url_for('main.catch_pokemon', poke_name=name)}}" class="btn btn-success">Catch</a>
            {%else%}
                <p style="color:red">You're team is full make space to add {{name}}</p>
            {%endif%}
        </div>
        <div class="right">
            <div class="stat-pack">
                <h2>Stats</h2>
                <p>Passive: {{poke.Ability}}</p>
                <p>Base Exp: {{poke.BaseExp}}</p>
                <p>Base Attack Power: {{poke.BaseAttk}}</p>
                <p>Base Hit Points: {{poke.BaseHP}}</p>
                <p class='bottom'>Base Defense: {{poke.BaseDef}}</p>
            </div>
        </div>
    </div>



{%endif%}

{%endblock%}